<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Dashboard</title>
    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>

  <body>
    <!-- ✅ Chỉ cần 1 thẻ <body> -->
    <h1>Hi, This is user page, I'm Killua</h1>
    <div class="container">
      <div class="row">
        <div class="user-inf-container">
          <form method="POST" action="/users/creat-user">
            <div class="mt-3">
              <h3>Create New User!</h3>
            </div>
            <div class="mb-3 col-6">
              <label for="email" class="form-label">Email address</label>
              <input
                name="email"
                type="email"
                class="form-control"
                id="email"
              />
            </div>
            <div class="mb-3 col-6">
              <label for="username" class="form-label">User Name</label>
              <input
                name="username"
                type="text"
                class="form-control"
                id="username"
              />
            </div>
            <div class="mb-3 col-6">
              <label for="password" class="form-label">Password</label>
              <input
                name="password"
                type="password"
                class="form-control"
                id="password"
              />
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
        <div class="userslist ms-2">
          <h2 class="mt-3">Table Users:</h2>
          <table class="table table-hover table-bordered">
            <thead class="table-dark">
              <tr>
                <th scope="col">#ID</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Handle-Action</th>
              </tr>
            </thead>
            <tbody>
              <% userList.forEach(function(item,index) { %>
              <tr>
                <th scope="row"><%=item.id %></th>
                <td><%=item.username %></td>
                <td><%=item.email %></td>
                <td>
                  <a href="/update-user/<%= item.id %>" class="btn btn-primary"
                    >Edit</a
                  >
                  <form
                    action="/delete-user/<%=item.id%>"
                    method="POST"
                    style="display: inline"
                  >
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
